<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blog</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img src="<%= blog.coverImageURL %>" width="500px" />
      <pre class="mt-3"><%= blog.body %></pre>
    </div>

    <div class="container mt-4 flex">
      <img src="<%= blog.createdBy.profileImg %>" alt="" width="70px" /> <%=
      blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
      <h1>Comments</h1>
      <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post">
            <div class="mb-3">
              <input
                type="text"
                name="content"
                class="form-control"
                placeholder="Enter your comment"
              />
              <button class="btn btn-primary mt-2" type="submit">Post</button>
            </div>
          </form>
          <div class="mt-3">
            <% comments.forEach(comment => { %>
             <div class="">
                <img src="<%= comment.createdBy.profileImg %>" alt="" width="70px" />
             </div>
            <% }) %>
          </div>
      <% } else { %>
        <p>Login to comment</p>
        <% } %>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
